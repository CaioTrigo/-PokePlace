
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h1>Trade Pokémons</h1>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Pokémons</h3>
    <%= link_to "Add a Pokémon to your list", new_my_pokemon_path, class: "btn btn-add" %>
    <%= link_to "Search a Pokémon to trade", my_pokemons_search_path, class: "btn btn-trade" %>
  </div>
</div>

<% @my_pokemons.each do |my_pokemon| %>
  <%= my_pokemon.pokemon.name %>
  <%= my_pokemon.pokemon.type_1 %>
  <%= my_pokemon.pokemon.type_2 if my_pokemon.pokemon.type_2 %>
<% end %>
